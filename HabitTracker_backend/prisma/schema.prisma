generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  habits Habits[]
}

model Habits{
  id Int @id @default(autoincrement())
  habit_name String
  description String
  frequency String
  askAI String
  AIsuggestions String
  status String @default("pending")
  userId Int
  user User @relation(fields: [userId], references: [id])
}